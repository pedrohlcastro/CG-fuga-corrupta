CC=g++
all:arquivos

arquivos: src/main.o src/inimigos.o src/desenho.o src/personagem.o
	$(CC) src/main.o src/inimigos.o src/desenho.o src/personagem.o -o executavel -Iincludes -lSOIL -lGL -lglut -lGLEW -lsfml-audio -lm
	@echo "\nCRIADO COM SUCESSO UTILIZE MAKE RUN PARA RODAR\n"

main.o: src/main.cpp
	$(CC) -o src/main.o -c src/main.cpp -Iincludes -lSOIL -lGL -lglut -lGLEW -lsfml-audio -lm

inimigos.o: src/inimigos.cpp
	$(CC) -o src/inimigos.o -c src/inimigos.cpp -Iincludes -lSOIL -lGL -lglut -lGLEW -lsfml-audio -lm

desenho.o: src/desenho.cpp
	$(CC) -o src/desenho.o -c src/desenho.cpp -Iincludes -lSOIL -lGL -lglut -lGLEW -lsfml-audio -lm

personagem.o: src/personagem.cpp
	$(CC) -o src/personagem.o -c src/personagem.cpp -Iincludes -lSOIL -lGL -lglut -lGLEW -lsfml-audio -lm
	
run:
	./executavel

clean:
	rm -rf *o arquivos
	@echo "Arquivos .o deletados com suecesso\n"
