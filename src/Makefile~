CC=g++
all:arquivos

arquivos: main.o inimigos.o desenho.o personagem.o
	$(CC) main.o inimigos.o desenho.o personagem.o -o executavel -lSOIL -lGL -lglut -lGLEW -lm
	@echo "clear\n"
	@echo "\nCRIADO COM SUCESSO UTILIZE MAKE RUN PARA RODAR\n"

main.o: main.cpp
	$(CC) -o main.o -c main.cpp -lSOIL -lGL -lglut -lGLEW -lm

inimigos.o: inimigos.cpp
	$(CC) -o inimigos.o -c inimigos.cpp -lSOIL -lGL -lglut -lGLEW -lm

desenho.o: desenho.cpp
	$(CC) -o desenho.o -c desenho.cpp -lSOIL -lGL -lglut -lGLEW -lm

personagem.o: personagem.cpp
	$(CC) -o personagem.o -c personagem.cpp -lSOIL -lGL -lglut -lGLEW -lm
	
run:
	./executavel

clean:
	rm -rf *o arquivos
	@echo "Limpando arquivos .o\n"
